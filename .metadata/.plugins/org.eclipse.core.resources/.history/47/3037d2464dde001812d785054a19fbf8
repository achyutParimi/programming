package com.samsung.test;

public class StringSamples {
	
	public boolean isUnique(String str){
		boolean val = true;
		for(int i = 0; i<str.length(); i++){
			int c = str.charAt(i);
			int j=i+1;
			while(j < str.length()){
				int d = str.charAt(j);
				if(c == d){
					val = false; 
					break;
				}else j++;

			}

			
		}
	return val;
	}

	public boolean isUniqueOptimized(String str){
		boolean val = true;
		boolean []charset = new boolean[128];//max values in an ascii set are 128
		for(int i = 0; i<str.length(); i++){
			int c = str.charAt(i);
			if(charset[c] == true){
				return false;
			}
			else{
				charset[c] = true;
			}
			
		}
		return val;
	}
	public boolean isPermutation(String str1, String str2){
		boolean val = true;
		int []charset = new int[128];
		
		if(str1.length()!= str2.length()) return false;
		
		for(int i = 0; i < str1.length(); i++){
			charset[str1.charAt(i)]++;
		}
		
		for(int j=0; j < str2.length(); j++){
			
			charset[str2.charAt(j)]--;
			
			if(charset[str2.charAt(j)] < 0) return false;
		}
		
		
		
		return val;
	}
	public static void main(String []args){
		
		StringSamples ss = new StringSamples();
		
		//System.out.println("isUnique ? = " +ss.isUniqueOptimized("Achyuta"));
		System.out.println("isUnique ? = " +ss.isPermutation("male", "meal"));
		
		
	}

}
